<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to my Pantry</h1>
    <% if (currentPantries.length > 0) { %>
      <% currentPantries.forEach((pantry) => { %>
        <li>
          <a href = "/users/<%= user._id %>/foods/<%= pantry._id %>">
            <%= pantry.name %>
          </a>
          <br>
          <a href="/users/<%= user._id %>/foods/<%= pantry._id %>/edit">
            Edit this pantry
          </a>
          <br>
          <form
              action="/users/<%= user._id %>/foods/<%= pantry._id %>?_method=DELETE"
              method="POST">
              <button type="submit">Delete this pantry</button>
          </form>
        </li>
        <br><br>
      <% }) %>
    <% } else { %>
      <p>There are no items in this pantry.</p>     
    <% } %>

  </body>
</html>
